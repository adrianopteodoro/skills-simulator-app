{
  "name": "skills-simulator",
  "private": true,
  "packageManager": "npm@10.8.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm -w apps/server run dev & npm -w apps/app run dev",
    "build": "npm -w apps/server run build && npm -w apps/app run build",
    "start": "npm -w apps/server run start",
    "lint": "eslint . --ext .ts,.tsx,.vue,.js,.cjs,.mjs",
    "typecheck": "npm -w apps/server run typecheck && npm -w apps/app run typecheck",
    "audit": "npm audit"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@types/compression": "^1.8.1",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "eslint-plugin-vue": "^9.26.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
