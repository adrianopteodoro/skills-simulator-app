{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "html"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "require-await": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ],
      "space-before-blocks": "error",
      "space-in-parens": "error",
      "object-property-newline": "error",
      "object-curly-newline": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-trailing-spaces": "error",
      "max-params": [
        "error",
        3
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "no-var": "error",
      "no-const-assign": "error",
      "no-this-before-super": "error",
      "no-undef": "error",
      "no-unreachable": "error",
      "constructor-super": "error",
      "valid-typeof": "error",
      "quotes": [
        "error",
        "single"
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignorePattern": "(^\\s*const\\s.+=\\s*require\\s*\\([A-Za-z0-9\\/.']+\\))|(import\\x20([A-Za-z0-9]+)\\x20from\\x20[A-Za-z0-9\\/.']+)",
          "ignoreUrls": true,
          "ignoreTrailingComments": true,
          "ignoreComments": true,
          "ignoreRegExpLiterals": true
        }
      ]
    }
  }